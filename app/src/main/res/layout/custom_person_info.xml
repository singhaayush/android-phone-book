<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.cardview.widget.CardView
      android:layout_margin="4dp"
       android:elevation="30dp"
       app:cardCornerRadius="5dp"
       android:background="@color/colorAccent"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:backgroundTint="@color/yellow"
           android:orientation="horizontal"
           android:id="@+id/header_layout"
           android:background="@color/colorAccent"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <TextView
               android:layout_weight="1"
               android:id="@+id/person_name"
               android:textSize="20sp"
               android:textStyle="bold"
               android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
               android:text="Ayush Singh"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
           <ImageView
               android:layout_weight="3"

               android:layout_gravity="center"
               android:src="@drawable/ic_baseline_contact_phone_24"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
              />
       </LinearLayout>
       <RelativeLayout
           android:id="@+id/expandable_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_marginTop="40dp"
               android:orientation="horizontal"

               android:background="@color/colorAccent"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:id="@+id/person_email"
                   android:layout_marginLeft="10dp"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="18sp"
                   android:text="sayush839@gmaol.com"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
               <ImageView
                   android:layout_alignParentEnd="true"
                   android:layout_marginLeft="105dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_baseline_email_24"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </RelativeLayout>
           <RelativeLayout
               android:layout_marginTop="80dp"
               android:orientation="horizontal"

               android:background="@color/colorAccent"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:id="@+id/person_dob"
                   android:layout_marginLeft="10dp"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="18sp"
                   android:text="DOB 19-12-1997"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
               <ImageView
                   android:layout_alignParentEnd="true"
                   android:layout_marginLeft="165dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_baseline_date_range_24"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </RelativeLayout>
           <RelativeLayout
               android:layout_marginTop="120dp"
               android:orientation="horizontal"

               android:background="@color/colorAccent"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:id="@+id/person_phoneNumber"
                   android:layout_marginLeft="10dp"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="18sp"
                   android:text="+91 7905429652"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
               <ImageView
                   android:layout_alignParentEnd="true"
                   android:layout_marginLeft="165dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_baseline_phone_iphone_24"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </RelativeLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_marginTop="160dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:layout_weight="1"
                   android:textSize="20sp"
                   android:textColor="#ffffff"
                   android:background="@color/colorPrimary"
                   android:text="edit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <Button
                   android:layout_marginLeft="1dp"
                   android:layout_weight="1"
                   android:textSize="20sp"
                   android:textColor="#ffffff"
                   android:background="@color/colorPrimary"
                   android:text="Delete"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </RelativeLayout>


   </androidx.cardview.widget.CardView>

</LinearLayout>